<?xml version="1.0" encoding="UTF-8"?>

<!--  Description du paysage de simulation -->
<application >
	<paysage >
		<zone nom="Chambre" ID="0">
			<phenomene nom="temperature_externe" mode="sinus" >
				<parametres offset="0" amplitude="4" phase ="0" period="10"/>			
			</phenomene>
			<control nom="ctrl_temp" mode="on_off" >
				<parametres seuil_max="21" seuil_min="19" val_max="40" val_min="5" />
	        </control>     
			<etat nom="etat_chambre" etat_initial="20" Iphen="1" Ictrl="1" />
		</zone>
			<zone nom="Aquarium" ID="1">
			<phenomene nom="pH" mode="pulse" >
				<parametres val_low="3" val_high="2" t_delai="0" t_rise="0" pwidth="10" t_fall="0" period="10"/>
			</phenomene>
			<control nom="ctrl_pH" mode="proportionnel" >
				<param set_point="7" gain="10"/>
	      </control>     
			<etat nom="etat_aquarium" etat_initial="7" Iphen="1" Ictrl="1" />
		</zone>
	</paysage>
	<simulation nb_tic="10"/>
</application>